{
  "name": "basic",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build --mode client && vite build",
    "preview": "wrangler dev",
    "deploy": "bun run build && wrangler deploy",
    "types:generate": "wrangler types ./app/cloudflare.d.ts --env-interface CloudflareBindings",
    "format": "biome format --write",
    "check": "biome check",
    "db:generate": "drizzle-kit generate",
    "db:apply": "wrangler d1 migrations apply cloudflare-demo --local"
  },
  "private": true,
  "dependencies": {
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.4",
    "honox": "^0.1.43"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/vite": "^4.0.9",
    "@types/bun": "^1.2.18",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4.0.9",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
